<form method="post" action="/stock/<%=@item.id%>">

  <label for="name">Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  value="<%=@item.name%>"
  />


  <label for="man_id">Manufacturer:</label>
  <select name="man_id" id="man_id-field">
    <option
    value="Floppomatic"
    <%="selected" if @item.man_id == "1"%>
    >Floppomatic</option>
    <option
    value="Doot-Tek"
    <%="selected" if @item.man_id == "2"%>
    >Doot-Tek</option>
  </select>

  <label for="info">Description:</label>
  <input
  type="text"
  name="info"
  id="info-field"
  value="<%=@item.info%>"
  />

  <label for="stock">Stock level:</label>
  <input
  type="number"
  name="stock"
  id="stock-field"
  value="<%=@item.stock%>"
  />

  <label for="cost">Cost price: £</label>
  <input
  type="number"
  name="cost"
  id="cost-field"
  value="<%=@item.cost%>"
  />

  <label for="sale">Sale price: £</label>
  <input
  type="number"
  name="sale"
  id="sale-field"
  value="<%=@item.sale%>"
  />

  <input type='submit' value="Edit item?">
</form>
