<form method="post" action="/stock">

  <label for="name">Name:</label>
    <input id="name" type="text" name="name" />

  <label for="man_id">Manufacturer:</label>
    <select id="man_id" name="man_id">
      <option value="1">Floppomatic</option>
      <option value="2">Doot-Tek</option>
    </select>

  <label for="info">Description:</label>
    <input id="info" type="text" name="info">

  <label for="stock">Stock level:</label>
    <input id="stock" type="number" name="stock"/>

  <label for="cost">Cost price:</label>
    <input id="cost" type="number" name="cost"/>

  <label for="sale">Sale price:</label>
    <input id="sale" type="number" name="sale"/>

  <input type='submit' value="Add Item"/>
</form>
